@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("response")
<div class="login-container">
    <div class="card" style="width: 500px;">
        <div class="card-body">
            <h5 class="card-title">Login</h5>
            <form asp-action="Login" asp-controller="Account" method="post">
                <div class="form-group">
                    <label for="username" style="
                           margin-left: 0px;">Tài Khoản</label>
                    <input type="text" class="form-control" name="Username" required placeholder="Nhập tài khoản">
                </div>
                <div class="form-group" style="
                     margin-top: 10px;">
                    <label for="password" style="
                           margin-left: 0px;">Mật khẩu</label>
                    <input type="password" class="form-control" name="Password" required placeholder="Nhập mật khẩu">
                </div>
                <button type="submit" class="btn btn-primary" style="
                        margin-top: 10px; margin-left: 200px;">
                    Login
                </button>
            </form>
        </div>
    </div>
</div>