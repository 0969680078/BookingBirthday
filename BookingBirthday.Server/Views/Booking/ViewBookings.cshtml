@using BookingBirthday.Data.EF
@using BookingBirthday.Server.Common;
@model X.PagedList.IPagedList<BookingBirthday.Data.Entities.Booking>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "View Orders Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("response")

<div class="container-xxl py-5" style="margin-top: 100px">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                    <h1 class="display-5 mb-3">Đơn hàng đã đặt</h1>
                </div>
            </div>
        </div>
        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">
                    @if (Model.Count > 0)
                    {
                        int stt = 1;

                        <div class="table-responsive card mt-2">
                            <table class="table table-striped table-hover">
                                <thead class="table-green">
                                    <tr>
                                        <th>Thứ tự</th>
                                        <th style="white-space: normal;">Mã đơn hàng</th>
                                        <th>Số điện thoại</th>
                                        <th>Địa chỉ tổ chức</th>
                                        <th>Ngày đặt hàng</th>
                                        <th>Thời gian tiệc diễn ra</th>
                                        <th>Thời gian hủy tiệc</th>
                                        <th>Tổng tiền</th>
                                        <th>Ghi chú</th>
                                        <th colspan="2">Lý do hủy đơn của chủ tiệc</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(stt++)</td>
                                            <td>
                                                <label style="width: auto">@CreateMD5Short.MD5Short(item.Id.ToString())</label>
                                            </td>
                                            <td>
                                                <label style="width: auto">@item.Phone</label>
                                            </td>
                                            <td>
                                                <label style="width: auto">@item.Address</label>
                                            </td>
                                            <td>
                                                <label style="width: auto">@item.Date_order</label>
                                            </td>
                                            <td>
                                                <label style="width: auto">@item.Date_start</label>
                                            </td>
                                            <td>
                                                @if (item.Date_cancel != default(DateTime))
                                                {
                                                    <label style="width: auto">@item.Date_cancel</label>
                                                }
                                            </td>

                                            <td>
                                                <label style="width: auto">@Convert.ToDouble(item.Total).ToString("#,##0")</label>
                                            </td>
                                            <td>
                                                <label style="width: auto">@item.Note</label>
                                            </td>
                                            <td>
                                                <label style="width: auto">@item.Reason</label>
                                            </td>
                                            <td>
                                                <label style="width: auto">@item.BookingStatus</label>
                                            </td>
                                            <td>
                                                @* <a class="btn btn-primary" onclick="detailOrder(@item.Id)">Chi tiết</a> *@
                                                @if (@item.BookingStatus == "Processing" || @item.BookingStatus == "Accepted")
                                                {
                                                    <a class="btn btn-warning" onclick="huydonhang(@item.Id)">Hủy đơn</a>
                                                }
                                            </td>
                                            <td>
                                                @if (@item.BookingStatus == "Processing")
                                                {
                                                    <a class="btn btn-warning" id="remainingPaymentBtn" data-bookingId="@item.Id" data- userId="@item.UserId">Tất toán</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@stt</td>
                                            <td style="white-space: normal;">@CreateMD5.MD5Hash(item.Id.ToString())</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Address</td>
                                            <td>@item.Date_order</td>
                                            <td>@item.Date_start</td>
                                            <td>@(item.Date_cancel != default(DateTime) ? item.Date_cancel.ToString() : "")</td>
                                            <td>@Convert.ToDouble(item.Total).ToString("#,##0") đồng</td>
                                            <td>@item.Note</td>
                                            <td colspan="2">@item.Reason</td>
                                            <td>@item.BookingStatus</td>
                                            <td>
                                                @if (item.BookingStatus == "Processing" || item.BookingStatus == "Accepted")
                                                {
                                                    <a class="btn btn-warning" onclick="huydonhang('@item.Id')">Hủy đơn</a>
                                                }
                                            </td>
                                            <td>
                                                @if (item.BookingStatus == "Processing")
                                                {
                                                    <a class="btn btn-warning" id="remainingPaymentBtn" data-bookingId="@item.Id" data-userId="@item.UserId">Tất toán</a>
                                                }
                                            </td>
                                        </tr>
                                        stt++;
                                    }
                                </tbody>
                            </table>
                        </div>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))

                    }
                    else
                    {
                        <p class="alert alert-danger">Danh sách đơn hàng trống</p>
                        <a href="/" class="btn btn-success">Tiếp tục mua hàng</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="orderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderModalLabel">Chi tiết đơn hàng</h5>
            </div>
            <div class="modal-body">
                <!-- Nội dung chi tiết đơn hàng -->
                <h4>Tên sản phẩm</h4>
                <p>Mô tả sản phẩm</p>
                <p>Giá sản phẩm:</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeModal()">Đóng</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Get the button element
    var remainingPaymentBtn = document.getElementById("remainingPaymentBtn");
    // Add click event listener to the button
    remainingPaymentBtn.addEventListener("click", function () {
        // Get bookingId and userId from data attributes
        var BookingId = remainingPaymentBtn.getAttribute("data-bookingId");
        var userId = remainingPaymentBtn.getAttribute("data-userId");
        // Redirect to the RemainingPayment page with bookingId and userId parameters
        window.location.href = "/Cart/RemainingPayment?bookingId=" + BookingId + "&userId=" + userId;
    });
</script>
