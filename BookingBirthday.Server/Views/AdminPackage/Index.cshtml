@model X.PagedList.IPagedList<BookingBirthday.Server.Models.PackageModel>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "QL_SanPham Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("response")
@section Scripts {
    <script>
        var productDescriptions = document.querySelectorAll(".Detail");
        for (var i = 0; i < productDescriptions.length; i++) {
            var productDescription = productDescriptions[i];
            if (productDescription.textContent.length > 750) {
                productDescription.textContent = productDescription.textContent.slice(0, 750) + "...";
            }
        }
    </script>
}

<div class="container-xxl py-5" style="margin-top: 100px">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                    <h1 class="display-5 mb-3">Quản lí sản phẩm</h1>
                </div>
            </div>
        </div>
        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">
                    @if (Model.Count > 0)
                    {
                        int stt = 1;

                        <div class="table-responsive card mt-2">
                            <table class="table table-hover">
                                <tr>
                                    <th>#</th>
                                    <th>Tên chủ tiệc</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Địa chỉ</th>
                                    <th>Mô tả</th>
                                    <th>Chú ý</th>
                                    <th>Hình ảnh</th>
                                    <th>Giá</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(stt++)</td>
                                        <td>
                                            <label style="width: auto">@item.Host_name</label>
                                        </td>
                                        <td>
                                            <label style="width: auto">@item.Name</label>
                                        </td>
                                        <td>
                                            <label style="width: auto">@item.Venue</label>
                                        </td>
                                        <td>
                                            <label style="width: auto">
                                                <span class="Detail">@Html.Raw(item.Detail)</span>
                                            </label>
                                        </td>
                                        <td>
                                            <label style="width: auto">@item.Note</label>
                                        </td>
                                        <td>
                                            <img style="width: 10%" src="@item.image_url" />
                                        </td>
                                        <td>
                                            <label style="width: auto">@Convert.ToDouble(item.Price).ToString("#,##0") đồng</label>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))

                    }
                    else
                    {
                        <p class="alert alert-danger">Danh sách sản phẩm trống</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
